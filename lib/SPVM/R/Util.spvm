  # This method will be inplemented as Complex_2d#to_string method
  static method _double_complex_to_string : string ($z : Complex_2d) {
    
    my $re = $z->{re};
    
    my $im = $z->{im};
    
    my $string = (string)undef;
    
    if ($im < 0) {
      $string = "$re${im}i";
    }
    else {
      $string = "$re+${im}i";
    }
    
    return $string;
  }
  
